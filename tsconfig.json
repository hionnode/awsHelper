{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
   "lib": [
      "ES2020"
    ],
    "types": [
      "node",
      // "mocha",
      // "chai"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
  },
    "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}